generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ORCAMENTOS {
  id           Int     @id @default(autoincrement())
  numOrc       Int
  dtEmissao    String
  nomeCLI      String
  valorTotal   Int
  descSituacao String
  dataEntrega  String?
  vendNome     String

  @@map("orcamento")
}

model Cliente {
  id       Int    @id @default(autoincrement())
  codCLI   Int
  nomeCLI  String
  cnpjCLI  String
  fone1CLI String
  email    String
  cidCLI   String
  ufCLI    String

  @@map("clientes")
}

model Produtos {
  id            Int     @id @default(autoincrement())
  codigo        String
  description   String
  codFornecedor Int
  fabricante    String?
}
