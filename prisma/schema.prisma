generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model ORCAMENTOS {
  id           Int     @id @default(autoincrement())
  DataEntrega  String?
  DescSituacao String
  DtEmissao    String
  Nome_cli     String
  NumOrc       Int
  ValorTotal   String
  Vend_Nome    String

  @@map("orcamento")
}

model Produtos {
  id            Int     @id @default(autoincrement())
  Codigo        String
  Descricao     String
  codFornecedor String?
  Fabricante    String?

  @@map("produtos")
}

model User {
  id       Int    @id @default(autoincrement())
  login    String
  password String
}

model Order {
  id         Int       @id @default(autoincrement())
  client     String
  date       String
  email      String?
  number     String?
  annotation String?
  shop       String?
  contents   Content[]

  @@map("order")
}

model Content {
  id          Int    @id @default(autoincrement())
  amount      String
  unit        String
  code        String
  description String
  unit_price  String
  orderId     Int
  order       Order  @relation(fields: [orderId], references: [id])

  @@map("content")
}
