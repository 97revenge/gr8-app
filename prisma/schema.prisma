generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ORCAMENTOS {
  id           Int     @id @default(autoincrement())
  NumOrc       Int
  DtEmissao    String
  Nome_cli     String
  ValorTotal   String
  DescSituacao String
  DataEntrega  String?
  Vend_Nome    String

  @@map("orcamento")
}

model Produtos {
  id            Int     @id @default(autoincrement())
  Codigo        String
  Descricao     String
  codFornecedor String?
  Fabricante    String?

  @@map("produtos")
}

model User {
  id       Int    @id @default(autoincrement())
  login    String
  password String
}

model Order {
  id        Int      @id @default(autoincrement())
  client    String
  date      String
  email     String? 
  number    String? 
  annotation String? 
  shop      String? 

  contents    Content[]

  @@map("order")
}

model Content {
  id          Int      @id @default(autoincrement())
  amount      String
  unit        String
  code        String
  description String
  unit_price  String

  order      Order    @relation(fields: [orderId], references: [id])
  orderId    Int

  @@map("content")
}
