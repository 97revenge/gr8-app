generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ORCAMENTOS {
  id           Int     @id @default(autoincrement())
  NumOrc       Int
  DtEmissao    String
  Nome_cli     String
  ValorTotal   String
  DescSituacao String
  DataEntrega  String?
  Vend_Nome    String

  @@map("orcamento")
}

model Clientes {
  id           Int     @id @default(autoincrement())
  CodCli       Int?
  Nome_cli     String?
  Cnpj_cpf_cli String?
  Fone1_Cli    String
  Texto271     String?
  Cid_Cli      String?
  Uf_Cli       String?

  @@map("clientes")
}

model Produtos {
  id            Int     @id @default(autoincrement())
  Codigo        String 
  Descricao     String
  codFornecedor String?
  Fabricante    String?

  @@map("produtos")
}


model Offer {
  id       Int     @id @default(autoincrement())
  client   String
  date     String
  email String? // email do cliente
  number String? // numero do cliente
  anotation String? // anotações  (se ja foi pago metade , ou alguma negociação manual)
  shop String? // qual provedor de mercado (se o pedido é na shopee , mercado livre, e-commerce e etc)



  orders   Order[]
}

model Order {
  id            Int     @id @default(autoincrement())
  amount        String
  unit          String
  code          String
  description   String
  unit_price    String

  offer         Offer   @relation(fields: [offerId], references: [id])
  offerId       Int
}





model Pedidos {
  id   Int    @id() @default(autoincrement())
  nome String
}
